{
    "compilerOptions": {
        "types": [
            "react",
            "react-dom"
        ],
        "lib": [
            "dom",
            "es6"
        ],
        "jsx": "react",
        "strict": true,
        "sourceMap": true,
        "outDir": "./build",
        "allowJs": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
    },
    "exclude": [
        "node_modules"
    ]
}